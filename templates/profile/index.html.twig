{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}
    {{ include('_nav.html.twig') }}
    <h1>My tasks</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Project</th>
            <th>Name</th>
            <th>Description</th>
            <th>Times</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.project.name }}</td>
                <td>{{ task.name }}</td>
                <td>{{ task.description }}</td>
                <td>
                    Created: {{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}
                    <br>
                    Updated: {{ task.updatedAt ? task.updatedAt|date('Y-m-d H:i:s') : '' }}
                </td>
                <td>
                    <a href="{{ path('profile.task.show', {'id': task.id}) }}">show</a>
                    <a href="{{ path('profile.task.edit', {'id': task.id}) }}">edit</a>
                    {{ include('profile/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('profile.task.new') }}">Create new</a>

{% endblock %}