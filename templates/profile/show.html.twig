{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ task.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ task.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ task.description }}</td>
        </tr>
        <tr>
            <th>Project</th>
            <td>{{ task.project.name }}</td>
        </tr>
        <tr>
            <th>User</th>
            <td>{{ task.user.name }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ task.updatedAt ? task.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('profile.index') }}">back to list</a>

    <a href="{{ path('profile.task.edit', {'id': task.id}) }}">edit</a>

    {{ include('profile/_delete_form.html.twig') }}
{% endblock %}